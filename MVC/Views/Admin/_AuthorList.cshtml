@model IEnumerable<Business.DTO.PersonViewModel>

<div class="spacer"></div>
<p>

    @Ajax.ActionLink("Lägg till författare", "AddAuthor", "Admin", null, new AjaxOptions
    {
        UpdateTargetId = "target",
        InsertionMode = InsertionMode.Replace,
        LoadingElementId = "loaderDiv",
        OnFailure = "showXHRError"
    }, new {id = "AddAuthor"})
</p>
<table class="table-condensed table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>

            <td>
                @Ajax.ActionLink("Ändra", "EditAuthor", "Admin", new {id = item.Id}, new AjaxOptions
                {
                    UpdateTargetId = "target",
                    InsertionMode = InsertionMode.Replace,
                    LoadingElementId = "loaderDiv",
                    OnFailure = "showXHRError"
                }, new {id = "EditAuthor"})

                |

                @Ajax.ActionLink("Radera", "DeleteAuthor", "Admin", new {id = item.Id}, new AjaxOptions
                {
                    UpdateTargetId = "target",
                    InsertionMode = InsertionMode.Replace,
                    LoadingElementId = "loaderDiv",
                    OnFailure = "showXHRError"
                }, new {id = "DeleteAuthor"})
            </td>
        </tr>
    }
</table>