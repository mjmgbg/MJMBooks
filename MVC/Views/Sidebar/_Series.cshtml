@model IEnumerable<Entities.SeriesModel>
@{

}
<div id="sidebar-wrapper1" class="sidebar-wrapper">
    <ul class=" sidebar-nav nav-pills nav-stacked" id="menu1">

        @foreach (var item in Model)
        {
            <li>
                @Ajax.ActionLink(linkText: "Serie: "+item.Name, actionName: "GetSeries", controllerName: "Home", routeValues: new { id = item.Id },
                    ajaxOptions: new AjaxOptions
                    {
                        UpdateTargetId = "target",
                        InsertionMode = InsertionMode.Replace,
                        LoadingElementId = "loaderDiv",
                        OnFailure = "showXHRError",
                    },
                    htmlAttributes: new { id = "seriesLink" + item.Id })
            </li>

            @*<li><a href="#"><input type="submit" class="menuopt" value="@item.Name" /></a></li>*@

        }
    </ul>
</div>